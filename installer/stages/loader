#we load the common libs
for i in `ls ../lib/common/*.sh`
do
    . $i
done

#we load the arch specific libs
for i in `ls ../lib/arch/*.sh`
do  
    . $i
done

. ../conf/global.cfg


shellout()
{
  (
    RC=$(mktemp)
    trap "rm -f $RC" EXIT
    declare -p | egrep -v " -[ai]?r " > $RC
    declare -p -f >> $RC
    /bin/bash --rcfile $RC -i
  )
}
